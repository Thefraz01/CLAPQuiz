<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/GridLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5pt"
            tools:context=".GridXMLActivity">

            <TableRow
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtSelectChannelTitle"
                    android:layout_weight="1"
                    android:text="Quiz Time"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"/>



            <TableRow
                android:layout_weight="1">

                <TextView

                    android:id="@+id/SelectChan"
                    android:layout_weight="1"
                    android:text="Select Quiz"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light" />
            </TableRow>
            <TableRow
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnCah1"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary" />
            </TableRow>

            <TableRow
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnCah2"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary" />
            </TableRow>
            <TableRow
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnCah3"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary" />
            </TableRow>
            <TableRow
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnCah4"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary" />
            </TableRow>
            <TableRow
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnCah5"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary" />
            </TableRow>
            <TableRow
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnCah6"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary" />
            </TableRow>
            <TableRow
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnCah7"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary" />
            </TableRow>
            <TableRow
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnCah8"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary" />
            </TableRow>

            <TableRow android:paddingTop= "40dp"
                android:paddingBottom= "20dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnResetChannels"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:background="@color/colorButtonPrimary"
                    android:text="Reset All Quizes" />
            </TableRow>


        </TableLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>